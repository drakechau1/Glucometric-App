<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".takesample.AddSampleFragment">

    <EditText
        android:id="@+id/editTextNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayoutBottomAction"
        android:ems="10"
        android:layout_marginBottom="10dp"
        android:hint="Notes"
        android:inputType="text"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linearLayoutBottomAction"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTakeSample"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="TAKE SAMPLE" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="SAVE" />

        <Button
            android:id="@+id/btnRandom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="RANDOM"
            android:visibility="visible" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearInputValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/editTextNote"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/textViewInputValue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Value"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="mg/l"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/editTextInputValue"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextInputValue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:width="200dp"
            android:ems="10"
            android:gravity="center"
            android:hint="0.00"
            android:inputType="number|text"
            android:textSize="40dp"
            app:layout_constraintStart_toEndOf="@id/textViewInputValue" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/editTextWavelengthValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewConnectionStatus"
        android:ems="10"
        android:enabled="true"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Spectra wavelength values" />


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/linearInputValue"
        android:layout_below="@id/editTextWavelengthValues"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="4dp">
    </com.github.mikephil.charting.charts.BarChart>


    <ProgressBar
        android:id="@+id/progressBarSavaData"
        style="?android:attr/progressBarStyle"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewConnectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Success connection: &quot;device_ble&quot;"
        android:textSize="15dp"
        android:textStyle="italic"
        tools:ignore="TextSizeCheck" />


</RelativeLayout>